<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textColor="#DFCF44"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/teamA_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textColor="#028FFF"
                android:textSize="32sp" />

            <Button
                android:id="@+id/teamA_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addOneToTeamA"
                android:text="Bonus(+1)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/teamA_tackle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addOneToTeamA"
                android:text="Tackle(+1)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/teamA_supertackle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addTwoToTeamA"
                android:text="Super Tackle(+2)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/teamA_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addOneToTeamA"
                android:text="Touch(+1)"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="370dp"
            android:layout_marginTop="26dp"
            android:background="#3A3563" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textColor="#53D82D"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/teamB_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textColor="#028FFF"
                android:textSize="32sp" />

            <Button
                android:id="@+id/teamB_bonus_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addOneToTeamB"
                android:text="Bonus(+1)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/teamB_tackle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addOneToTeamB"
                android:text="Tackle(+1)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/teamB_supertackle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addTwoToTeamB"
                android:text="Super Tackle(+2)"
                android:textSize="12sp" />

            <Button
                android:id="@+id/teamB_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="addOneToTeamB"
                android:text="Touch(+1)"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C62A2A"
        android:onClick="reset"
        android:text="Reset" />

    <Button
        android:id="@+id/finsh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#85D588"
        android:onClick="finishMatch"
        android:text="Match Finish" />

</LinearLayout>